{
  "manifest_version": 3,
  "name": "LinkedIn Candidate Scraper",
  "version": "1.0.0",
  "description": "Extract candidate information from LinkedIn job applicant pages and export to Excel format. Built for efficient recruitment data management.",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "LinkedIn Candidate Scraper - Extract applicant data"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["src/js/xlsx.full.min.js", "src/js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/js/background.js"
  },
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  }
} 